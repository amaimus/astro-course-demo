---
  import { type APISpaceXResponse } from '../types/api.ts'
import CardLaunch from './CardLaunch.astro';

  const API_URL = 'https://api.spacexdata.com/v5/launches/query'
  const res = await fetch(API_URL, {
    method: "POST",
    headers: {
      "Content-Type": "application/json"
    },
    body: JSON.stringify({
      query: {},
      options: {
        sort: {
          date_unix: 'asc'
        },
        limit: 12
      }
    })
  })
  const { docs: launches } = (await res.json()) as APISpaceXResponse

---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {
    launches.map(
      ({id, links, details, flight_number, success}) => (
      <CardLaunch
        id={id}
        img={links.patch.small}
        details={details}
        flightNumber={flight_number}
        success={success}
      />
    ))
  }
</div>

